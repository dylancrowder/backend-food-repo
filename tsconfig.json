{
  "compilerOptions": {
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/app.ts"
  ]
}
